{
  "compilerOptions": {
    "baseUrl": "./",
    "target": "es5",
    "module": "umd",
    "outDir": "./dist",
    "moduleResolution": "node",
    "lib": ["dom", "dom.iterable", "esnext"],
    "downlevelIteration": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  },
  "include": [
    "src"
  ]
}
